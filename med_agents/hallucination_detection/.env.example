# Environment Configuration for Hallucination Detection Package
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================================================
# Model Configuration
# ============================================================================

# Hugging Face Model
MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
NUM_ENSEMBLE_MEMBERS=5

# Model Cache Directory (where downloaded models are stored)
HF_HOME=~/.cache/huggingface
TRANSFORMERS_CACHE=~/.cache/huggingface/transformers

# ============================================================================
# Hugging Face Hub
# ============================================================================

# Hugging Face API Token (required for gated models)
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# ============================================================================
# Training Configuration
# ============================================================================

# Output directories
OUTPUT_DIR=./output
CHECKPOINT_DIR=./checkpoints
DETECTOR_OUTPUT_DIR=./detector_output

# Training hyperparameters
LEARNING_RATE=2e-4
NUM_EPOCHS=3
BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=4
MAX_LENGTH=512

# LoRA Configuration
LORA_R=8
LORA_ALPHA=32
LORA_DROPOUT=0.1

# ============================================================================
# Data Configuration
# ============================================================================

# Dataset cache directory
DATASETS_CACHE=~/.cache/huggingface/datasets

# Dataset sizes
SQUAD_TRAIN_ANSWERABLE=28000
SQUAD_TRAIN_UNANSWERABLE=14000
SQUAD_VAL_SIZE=2000
SQUAD_TEST_SIZE=5000

MMLU_TRAIN_SIZE=40000
MMLU_VAL_SIZE=2000
MMLU_TEST_SIZE=5000

# ============================================================================
# Compute Configuration
# ============================================================================

# Device configuration
CUDA_VISIBLE_DEVICES=0
DEVICE=cuda

# Mixed precision training
USE_FP16=true
USE_BF16=false

# Memory optimization
USE_GRADIENT_CHECKPOINTING=true
USE_8BIT=false
USE_4BIT=false

# ============================================================================
# Logging and Monitoring
# ============================================================================

# Weights & Biases (optional)
WANDB_PROJECT=hallucination-detection
WANDB_API_KEY=your_wandb_api_key_here
WANDB_ENABLED=false

# TensorBoard
TENSORBOARD_DIR=./runs

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FILE=./logs/training.log

# ============================================================================
# Uncertainty Estimation
# ============================================================================

# Temperature for softmax
TEMPERATURE=1.0

# Feature extraction
INCLUDE_EPISTEMIC=false
USE_MAX_FEATURES=false

# ============================================================================
# Hallucination Detection
# ============================================================================

# Default classifier type (lr, dt, svc, rf, knn)
CLASSIFIER_TYPE=rf
SCALE_FEATURES=true

# Validation split
VALIDATION_SPLIT=0.2

# ============================================================================
# Paths (Advanced)
# ============================================================================

# Custom paths (optional, will use defaults if not set)
# CUSTOM_MODEL_PATH=/path/to/your/model
# CUSTOM_DATA_PATH=/path/to/your/data
# CUSTOM_DETECTOR_PATH=/path/to/your/detector.pkl

# ============================================================================
# Development Settings
# ============================================================================

# Debug mode
DEBUG=false

# Random seed for reproducibility
RANDOM_SEED=42

# Number of workers for data loading
NUM_WORKERS=4

# ============================================================================
# API Keys (if using external services)
# ============================================================================

# OpenAI API (for comparisons, optional)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for comparisons, optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
